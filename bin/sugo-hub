#!/usr/bin/env node

/**
 * Command line interface of sugo-hub.
 * This file is auto generated by ape-tmpl.
 */

'use strict'

const program = require('commander')
const pkg = require('../package')
const sugoHub = require('../lib')

program
  .version(pkg[ 'version' ])
  .usage('[options] ')
  .description('Cloud server of SUGOS')
  .option('-p, --port <port>', 'Port number of server')
program.parse(process.argv)

// Run main command
sugoHub.apply(sugoHub, program.args.concat({
  port: program.port})
).catch(handleError)

// Handlers

/** Handle error */
function handleError (err) {
  console.error(err)
  process.exit(1)
}
